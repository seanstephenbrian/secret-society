extends layout 

block content 

    h1 Edit a Message

    if message 
        h2 Editing #{message.title}
        p Click here to 
            a(href=(`/delete/` + message.id)) delete this message
            | .
        form.edit-message(action='/edit' method='POST') 
            input(name='id' id='id' type='hidden' value=(message.id))
            .form-section
                label(for='title') Title:
                input(
                    name='title' 
                    type='text' 
                    required
                    value=(message.title)
                )
            .form-section 
                label(for='body') Message: 
                textarea(name='body')=message.body
            input(type='submit')

    if errors
        h2 Unable the process the request.
        if (errors.length === 1)
            h3 Please correct this error:
        else
            h3 Please correct the following errors:
        ul(class='errors')
            each error in errors
                li.error #{error.msg}