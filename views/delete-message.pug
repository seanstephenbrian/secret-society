extends layout 

block content 

    .page-wrapper.delete-page
        if message && currentUser && currentUser.admin
            h1.delete-title Deleting '#{message.title}'.
            p Are you sure you want to proceed?
            form(action='/delete' method='POST')
                input(type='hidden' name='id' id='id' value=(message.id))
                input(class='confirm-delete-button button' type='submit' value='Delete')

        else 
            .delete-page-error
                h1 Unable to complete request.
                p Click here to 
                    a(class='inline-link' href='/') go home
                    | .